<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourActivity">

    <LinearLayout
        android:layout_width="426dp"
        android:layout_height="733dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="420dp"
            android:layout_height="742dp"
            app:srcCompat="@drawable/pexels_photo_267885_1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="418dp"
            android:layout_height="738dp"
            android:background="#59000000" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="#8FFFFFFF"
            android:text="Бакалавриат"
            android:textAllCaps="false"
            android:textSize="19sp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="#8FFFFFFF"
            android:text="Подготовка к поступлению"
            android:textAllCaps="false"
            android:textSize="19sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:textAllCaps="false"
            android:background="#8FFFFFFF"
            android:text="Экзамены для поступления"
            android:textSize="19sp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>